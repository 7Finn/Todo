<Application
    x:Class="Todo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Todo"
    RequestedTheme="Light">
    <Application.Resources>
        <Style x:Key="HeaderTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Yu Gothic UI" />
            <Setter Property="Foreground" Value="#FF383838" />
            <Setter Property="SelectionHighlightColor" Value="#FF636363" />
        </Style>

        <Style x:Key="HeaderTitleBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF3599DE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
    </Application.Resources>
</Application>
